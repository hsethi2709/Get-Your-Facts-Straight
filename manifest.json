{
	"manifest_version": 2,
	"name" : "Get Your Facts Straight",
	"version" : "1.3",
	"permissions": ["storage","cookies","https://www.getfactcheck.me/"],
	"description": "Automated Fact Checker",
	"background": { 
		"scripts": ["eventPage.js"],
		"persistent": false
	},
	"content_security_policy": "script-src https://kit.fontawesome.com/13b884fbe0.js 'self' ; object-src 'self'",
	"browser_action": {
	
		"default_icon": {
			"16": "images/icon.png",
			"32": "images/icon.png",
			"48": "images/icon.png",
			"128": "images/icon.png"},
				
		"default_title" : "Get Your Facts Straight",
		"default_popup" : "popup.html"

	}
}
