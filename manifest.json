{
	"manifest_version": 2,
	"name" : "Get Your Facts Straight",
	"version" : "1.0",
	"permissions": ["contextMenus","activeTab","declarativeContent","storage","tabs","<all_urls>"],
	"description": "Automated Fact Checker",
	"background": { 
		"scripts": ["eventPage.js"],
		"persistent": false
	},
	"browser_action": {
	
		"default_icon": {
			"16": "images/icon.png",
			"32": "images/icon.png",
			"48": "images/icon.png",
			"128": "images/icon.png"},
				
		"default_title" : "Get Your Facts Straight",
		"default_popup" : "popup.html"

	}
}
